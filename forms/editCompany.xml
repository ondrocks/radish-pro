<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<form action='api/post_company/' method='POST' formid='editCompany'>
	
	<formelements>

		<formelement type='hidden' name='command' value='post_company'>
		</formelement>
		
		<formelement type='id' name='id' for='id'>
		</formelement>

		<formelement type='text' label='Name' for='company'>
		</formelement>

		<formelement type='lookup' editable='false' into='people' label='Contact' for='name' where='company'>
		</formelement>

		<formelement type='text' label='Industry' for='industry'>
		</formelement>

		<formelement type='text' label='Kvk nr' for='kvk'>
		</formelement>
		
		<formelement type='text' label='Business address' for='businessAddress'>
		</formelement>
		
		<formelement type='text' label='Business postalcode' for='businessPostalcode'>
		</formelement>
		
		<formelement type='text' label='Business city' for='businessPlace'>
		</formelement>

		<formelement type='separator'>
		</formelement>
		
		<formelement type='telephone' label='Telephone' for='telephone'>
		</formelement>
		
		<formelement type='text' for='address' label='Address'>
		</formelement> 

		<formelement type='text' for='postalcode' label='Postal code'>
		</formelement>
		
		<formelement type='text' for='place' label='City'>
		</formelement>
		
		<formelement type='anchor' for='url' label='Website'>
		</formelement>
		
		<formelement type='text' for='size' label='Employees'>
		</formelement>
		
		<formelement type='text' for='ticker' label='Ticker'>
		</formelement>

		<formelement type='separator'>
		</formelement>

		<formelement type='button' label='get business details' onclick="getCompInfo(
			'company',
			['kvk', 'businessAddress', 'businessPostalcode', 'businessPlace', 'size'])">
		</formelement>		
		
		<formelement type='submit' label='update'>
		</formelement>
		
	</formelements>
		
</form>

